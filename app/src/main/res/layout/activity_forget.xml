<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFCFC"
>
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="30dp"
        android:layout_height="44dp"
        android:src="@drawable/back"/>

    <RelativeLayout
        android:id="@+id/r1_forget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_user"
            android:layout_marginTop="47dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入手机号"
            android:textColor="#363636"
            android:textSize="24sp"
            android:layout_below="@id/icon_user"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_innumber" />

        <LinearLayout
            android:id="@+id/linear_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/tv_innumber"
            android:layout_centerHorizontal="true">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"></Spinner>
            <EditText
                android:id="@+id/et_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/spinner"
                android:inputType="number"
                android:maxLength="11"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textColor="#6C6C6C"
            android:textSize="20sp"
            android:layout_below="@id/linear_spinner"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/r2_forget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/icon_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_yzm"
            android:layout_marginTop="47dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入验证码"
            android:textColor="#363636"
            android:textSize="24sp"
            android:layout_below="@id/icon_yzm"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_inyzm"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_inyzm"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#666666"
            android:text="18955326462    58秒后重发"/>

        <LinearLayout
            android:id="@+id/linear_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text"
            android:layout_marginTop="53dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLength="1"
                android:gravity="center"
                android:numeric="integer"
                android:inputType="number"
                android:background="@drawable/drawable_yzm_selector">
            </EditText>
            <EditText
                android:id="@+id/et_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:maxLength="1"
                android:gravity="center"
                android:numeric="integer"
                android:inputType="number"
                android:background="@drawable/drawable_yzm_selector" />
            <EditText
                android:id="@+id/et_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:maxLength="1"
                android:gravity="center"
                android:numeric="integer"
                android:inputType="number"
                android:background="@drawable/drawable_yzm_selector" />
            <EditText
                android:id="@+id/et_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:maxLength="1"
                android:gravity="center"
                android:numeric="integer"
                android:inputType="number"
                android:background="@drawable/drawable_yzm_selector" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r3_forget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/icon_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_password"
            android:layout_marginTop="47dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置登录密码"
            android:textColor="#363636"
            android:textSize="24sp"
            android:layout_below="@id/icon_password"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_setpassword"/>
        <TextView
            android:id="@+id/tv_passwordform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setpassword"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#666666"
            android:text="密码由6-16位英文字母、数字或字符组成"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_passwordform"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:textColor="#c0c0c9"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            android:hint="请输入6-16位密码"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/tv_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textColor="#6C6C6C"
            android:textSize="20sp"
            android:layout_below="@id/et_password"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r4_forget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:layout_centerInParent="true"
            android:text="立 即 登 录"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击按钮立刻登录进入"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_above="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码重置成功！"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="70dp"
            android:layout_above="@+id/btn_login"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
