<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="44dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加摄像机"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="请输入设备路由器的名称和密码"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />
        <com.massky.greenlandvland.View.ClearableEditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="路由器登录密码"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="下一步"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@drawable/drawable_logintext_selector"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_mate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_mate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mate"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btn_return"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/btn"
            android:layout_below="@id/iv_mate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="返回重新配置"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@drawable/drawable_logintext_selector"/>
    </RelativeLayout>
</LinearLayout>
