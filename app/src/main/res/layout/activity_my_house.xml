<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_smart_homes"
>
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_cirle_write"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智能家居"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Home"
        android:layout_marginTop="70dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="476dp"
        android:layout_marginTop="165dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/drawable_smarthome_background">
        <android.support.design.widget.TabLayout
            android:id="@+id/sliding_taps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#4cc5c3"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="#4cc9c3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>
